<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_cabecera_altura"
    android:background="@drawable/gradientes"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margen_horizontal"
    android:paddingTop="@dimen/activity_margen_vertical"
    android:paddingRight="@dimen/activity_margen_horizontal"
    android:paddingBottom="@dimen/activity_margen_vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imagePerfilCliente"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/nav_cabecera_desc"
        android:paddingTop="@dimen/nav_cabecera_espacio_vertical"
        app:srcCompat="@drawable/ser_tak"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txtUsuarioNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_cabecera_espacio_vertical"
        android:text="@string/nav_titulo_cabecera"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:id="@+id/txtCorreoNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_subtitulo_cabecera"
        />
</LinearLayout>
