<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerView.ServiciosExtraFragment"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Servicios Extras"
            android:textColor="#212F3D"
            android:textSize="20dp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Costo de empaque grande:"
                    android:textColor="#212F3D"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/txtCostoempaque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Costo empaque grande:"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Costo de empaque mediano:"
                    android:textColor="#212F3D"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/txtCostoempaquemediano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Costo empaque mediano:"
                    android:inputType="text" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Costo de empaque pequeño:"
                    android:textColor="#212F3D"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/txtCostoempaquepequeño"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Costo empaque pequeño:"
                    android:inputType="text" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Cargador extra:"
                    android:textColor="#2E4053"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtCargadorextra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cargador extra:"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/nombrePrestador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Precio por kilometro:"
                    android:textColor="#2E4053"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txtPreciokm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio por kilometro:"
                    android:inputType="text" />

            </LinearLayout>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Dias laborales:"
                android:textColor="#2E4053"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/lunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:checked="false"
                    android:text="Lunes" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/martes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:checked="false"
                    android:text="Martes" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/miercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:checked="false"
                    android:text="Miercoles" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/jueves"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:checked="false"
                    android:text="jueves" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/viernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:checked="false"
                    android:text="Viernes" />


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabado" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/domingo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Domingo" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Hora inicial de labores:"
                    android:textColor="#2E4053"
                    android:textSize="20sp" />




                    <EditText
                        android:id="@+id/horainicial"
                        android:layout_width="207dp"
                        android:layout_marginLeft="12dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/formato_hora"
                        android:inputType="time"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:layout_editor_absoluteY="99dp"
                         />

                <ImageButton
                    android:id="@+id/ib_obtener_hora"
                    android:layout_width="81dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="19dp"
                    android:src="@mipmap/ic_access_time_white_24dp"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintLeft_toRightOf="@+id/horainicial"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="ContentDescription"
                    tools:layout_editor_absoluteY="109dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Hora final de labores:"
                    android:textColor="#2E4053"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/txthorafinalabores"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:layout_weight="20"
                    android:ems="1"
                    android:hint="@string/formato_hora"
                    android:inputType="time"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteY="99dp" />


                <ImageButton
                    android:id="@+id/ib_obtener_hora_final"
                    android:layout_width="81dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="19dp"
                    android:src="@mipmap/ic_access_time_white_24dp"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintLeft_toRightOf="@+id/txthorafinalabores"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="ContentDescription"
                    tools:layout_editor_absoluteY="109dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/horarioPrestador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text=""
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3498DB"
            android:text="Editar"
            android:textColor=" #ECF0F1" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>




