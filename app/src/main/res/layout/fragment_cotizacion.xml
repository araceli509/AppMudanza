<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Cotizacion.Cotizacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Resumen del viaje"
            android:textAlignment="center"
            android:textColor="#212F3D"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <TextView
            android:id="@+id/textOrigen"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/textDestino"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvtarifa"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Tarifa:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvtarifaprecio"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="$106/km"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvkm"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="km(s) recorridos: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textKilometros"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvpagar"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Total:                                   $"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textTotal"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="64dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Num Pisos :   "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerpisos"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/switchseguro"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Seguro"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#3498DB"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#C6070707"
            android:text="Pagar"
            android:textColor="#F4F6F7"
            android:textColorHint="#FF0909"

            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>