                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvpagar"
