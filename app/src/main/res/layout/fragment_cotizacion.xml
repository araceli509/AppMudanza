<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Cotizacion.Cotizacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Resumen del viaje"
            android:textAlignment="center"
            android:textColor="#212F3D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textOrigen"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/textDestino"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvtarifa"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Tarifa:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvtarifaprecio"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="$106/km"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvkm"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="km(s) recorridos: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textKilometros"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="No Cajas Chicas: "
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numcc"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="No Cajas Medianas: "
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numcm"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="No Cajas Grande: "
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numcg"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="N. Trabajadores: "
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numt"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvpagar"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Total:                                   $"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textTotal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                />
            <TextView
                android:id="@+id/txtverificar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="verificar"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="64dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Num Pisos :   "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerpisos"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#3498DB"
            android:elevation="5dp"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#C6070707"
            android:text="Reservar"
            android:textColor="#F4F6F7"
            android:textColorHint="#FF0909"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>