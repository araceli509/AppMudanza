<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cotizacion.Cotizacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Resumen del viaje"
            android:textSize="24sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <TextView
            android:id="@+id/textOrigen"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/textDestino"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvtarifa"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:text="Tarifa:"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/tvtarifaprecio"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:text="$106/km"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvkm"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:text="km(s) recorridos: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textKilometros"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvpagar"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:text="Total:                                   $"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textTotal"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Num Pisos :   "
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerpisos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switchseguro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguro"
                android:textSize="18sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:elevation="5dp"
            android:text="Pagar"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>